border-1px($color)
  position: relative
  // 定义伪类，相对于元素是绝对定位
  &:after
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-top: 1px solid $color
    content: ' '
// 去除1像素
border-none()
  &:after
    display: none
// 利用@media写不同样式的图片
bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")